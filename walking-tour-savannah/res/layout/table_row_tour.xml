<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableRowTour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/TableRowLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_white_gradient"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/TableRowLinearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:weightSum="1" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".7" >

                        <ImageView
                            android:id="@+id/imageViewTourListImg1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:background="@color/arstrong_dark_moss"
                            android:src="@drawable/placeholder" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:background="@drawable/paper_bg" >

                        <edu.armstrong.util.AutoFitTextView
                            android:id="@+id/textViewTourName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="BADDD"
                            android:textColor="@color/dark_brown"
                            android:textColorHint="@android:color/black"
                            android:textColorLink="@android:color/black"
                            android:textSize="32sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/textViewTourDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/textViewTourName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_horizontal"
                            android:paddingLeft="10dp"
                            android:text="You shouldn&apos;t be seeing this"
                            android:textColor="@android:color/black"
                            android:textColorLink="@android:color/black"
                            android:textSize="16sp"
                            android:typeface="serif" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewTourTableRowShadow1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/black_white_gradient" />
        </LinearLayout>

    </RelativeLayout>

</TableRow>