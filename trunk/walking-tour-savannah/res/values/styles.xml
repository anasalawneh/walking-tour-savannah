<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="mapViewStyle">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="textViewStyle">
    	<item name="android:gravity">center</item>    
    </style>
   	
    <color name="light_green">#A2D76F</color>
    <color name="light_brown">#A5836C</color>
    <color name="dark_green">#366E04</color>
    <color name="dark_brown">#532202</color>
    
    <color name="armstrong_maroon">#8C0C04</color>
    <color name="armstrong_rust_orange">#DE7907</color>
    <color name="armstrong_teal_blue">#004F5A</color>
    <color name="arstrong_dark_moss">#566F5D</color>

</resources>