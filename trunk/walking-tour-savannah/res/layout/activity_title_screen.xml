<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TitleScreen" >

    <ImageSwitcher
        android:id="@+id/ImageSwitcher01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bricks31bw" >
    </ImageSwitcher>

    <RelativeLayout
        android:id="@+id/RelativeLayoutTitleScreenTop"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:alpha=".7"
        android:background="@drawable/bgblack"
        android:visibility="visible" >

        <ImageSwitcher
            android:id="@+id/ImageSwitcher02"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/dig_sav_logo" >

        </ImageSwitcher>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ImageSwitcher02"
            android:text="Dig Savannah"
            android:textSize="32sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutTitleScreenBottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/RelativeLayoutTitleScreenTop"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonSites"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:alpha=".9"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="-155sp"
            android:text="@string/Sites"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonTours"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@id/buttonSites"
            android:alpha=".9"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="-155sp"
            android:text="@string/Tours"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@id/buttonTours"
            android:alpha=".9"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="-155sp"
            android:text="@string/Map"
            android:textSize="22sp" />

    </RelativeLayout>

</RelativeLayout>